@model StudentManagementApp.Models.Student

<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Student</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #F0EFF6;
            font-family: 'Cairo', sans-serif;
        }
    </style>
</head>

<body>

    <div class="container mt-5">
        <h2 class="mb-4 text-center">Delete Student</h2>

        <h3 class="text-center mb-4">Are you sure you want to delete this student?</h3>

        <div class="mb-4">
            <h4>Student Details</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2 col-4">Name</dt>
                <dd class="col-sm-10 col-8">@Model.Name</dd>

                <dt class="col-sm-2 col-4">Email</dt>
                <dd class="col-sm-10 col-8">@Model.Email</dd>

                <dt class="col-sm-2 col-4">Course</dt>
                <dd class="col-sm-10 col-8">@Model.Course</dd>
            </dl>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.StudentId)

            <div class="d-flex justify-content-start gap-4">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a href="@Url.Action("Index", "Students")" class="btn btn-secondary">Cancel</a>
            </div>
        }
    </div>

</body>

</html>
