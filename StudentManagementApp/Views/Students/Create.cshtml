@model StudentManagementApp.Models.Student

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Student</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body, html {
            height: 100%;
        }

        body {
            background-color: #F0EFF6;
            font-family: 'Cairo', sans-serif;
        }

        .form-box {
            width: 100%;
            max-width: 400px;
            background-color: white;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }

        .form-group label {
            margin-bottom: 4px;
        }

        .form-control {
            font-size: 0.9rem;
            padding: 0.4rem 0.6rem;
        }

        .btn-create {
            background-color: #01c857;
            border: none;
            transition: background-color 0.3s ease;
        }

            .btn-create:hover {
                background-color: #8AD99F;
            }

            .btn-create:active {
                background-color: #01c857 !important;
            }

        .btn {
            transition: box-shadow 0.3s ease-in-out;
        }

        .button-row {
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
        }

        .form-control:focus {
            border-color: #01c857;
            box-shadow: 0 0 10px rgba(1, 200, 87, 0.5);
            outline: none;
        }
    </style>
</head>

<body>

    <div class="container-fluid d-flex justify-content-center align-items-center vh-100">
        <div class="form-box">
            <h4 class="mb-4 text-center">Create Student</h4>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken() // Save from CSRF attack , check if this same website request (same user)

                <div class="form-group mb-3 md-0 ms-md-4">
                    @Html.LabelFor(model => model.Name)
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>

                <div class="form-group mb-3 md-0 ms-md-4">
                    @Html.LabelFor(model => model.Email)
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", type = "email" })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>

                <div class="form-group mb-3 md-0 ms-md-4">
                    @Html.LabelFor(model => model.Course)
                    @Html.TextBoxFor(model => model.Course, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Course, "", new { @class = "text-danger" })
                </div>

                <div class="button-row mx-0 mx-md-4">
                    <button type="submit" class="btn btn-create">Create</button>
                    <a href="@Url.Action("Index", "Students")" class="btn btn-secondary me-0 me-md-3">Back to List</a>
                </div>
            }
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
