@model StudentManagementApp.Models.Student

<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #F0EFF6;
            font-family: 'Cairo', sans-serif;
        }

        .container {
            max-width: 90%;
        }
    </style>
</head>

<body>

    <div class="container mt-5">
        <h2 class="mb-5 text-start">Student Details</h2>

        <div>
            <dl class="row">
                <dt class="col-sm-2 col-12">Name</dt>
                <dd class="col-sm-10 col-12">@Model.Name</dd>

                <dt class="col-sm-2 col-12">Email</dt>
                <dd class="col-sm-10 col-12">@Model.Email</dd>

                <dt class="col-sm-2 col-12">Course</dt>
                <dd class="col-sm-10 col-12">@Model.Course</dd>
            </dl>
        </div>

        <div class="d-flex flex-row justify-content-start gap-3 mt-4">
            <a href="@Url.Action("Edit", "Students", new { id = Model.StudentId })" class="btn btn-warning btn-sm px-3">Edit</a>
            <a href="@Url.Action("Index", "Students")" class="btn btn-secondary btn-sm">Back to List</a>
        </div>
    </div>

</body>

</html>
