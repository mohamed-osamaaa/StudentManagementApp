@model IEnumerable<StudentManagementApp.Models.Student>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Students</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #F0EFF6;
            font-family: 'Cairo', sans-serif;
        }

        .container {
            margin-top: 50px;
        }

        .table {
            text-align: center;
        }

        .btn-create {
            background-color: #01c857;
            border: none;
            transition: background-color 0.3s ease;
        }

        .btn-create:hover {
            background-color: #8AD99F;
        }

        .btn-create:active {
            background-color: #01c857 !important;
        }

        .btn {
            transition: box-shadow 0.3s ease-in-out;
        }

        @@media (max-width: 768px) {
            .table th, .table td {
                font-size: 12px;
            }

            .table-responsive {
                overflow-x: auto;
            }
        }
    </style>
</head>

<body>

    <div class="container">
        <h2 class="mb-4">Students</h2>

        <p>
            <a href="@Url.Action("Create", "Students")" class="btn btn-create btn-primary">Create New</a>
        </p>

        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Course</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in Model)
                    {
                        <tr>
                            <td>@student.Name</td>
                            <td>@student.Email</td>
                            <td>@student.Course</td>
                            <td class="d-flex justify-content-center gap-3 pb-3">
                                <a href="@Url.Action("Edit", "Students", new { id = student.StudentId })" class="btn btn-sm btn-warning">Edit</a>
                                <a href="@Url.Action("Details", "Students", new { id = student.StudentId })" class="btn btn-sm btn-info">Details</a>
                                <a href="@Url.Action("Delete", "Students", new { id = student.StudentId })" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</body>
</html>
